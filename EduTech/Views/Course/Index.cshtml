@model List<EduTech.Models.Course>

<div class="grid grid-cols-1 md:grid-cols-4 gap-8">

    <div class="md:col-span-1">
        <div class="bg-white p-6 rounded-lg shadow-md border border-gray-100 sticky top-4">
            <h3 class="font-bold text-gray-800 text-lg mb-4 border-b pb-2">Kategoriler</h3>

            <ul class="space-y-2">
                <li>
                    <a href="/Course/Index"
                       class="block px-3 py-2 rounded transition @(ViewBag.SelectedCategoryId == null ? "bg-indigo-600 text-white" : "text-gray-600 hover:bg-gray-100")">
                        Tüm Kurslar
                    </a>
                </li>
                @if (ViewBag.Categories != null)
                {
                    foreach (var cat in ViewBag.Categories as List<EduTech.Models.Category>)
                    {
                        bool isActive = ViewBag.SelectedCategoryId == cat.Id;
                        <li>
                            <a href="/Course/Index?categoryId=@cat.Id"
                               class="block px-3 py-2 rounded transition @(isActive ? "bg-indigo-600 text-white" : "text-gray-600 hover:bg-gray-100")">
                                @cat.Name
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>

    <div class="md:col-span-3">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">
                @(ViewBag.SelectedCategoryId != null ? "Seçili Kategori Kursları" : "Tüm Kurslar")
            </h2>

            @if (Context.Session.GetString("Role") == "Admin")
            {
                <a href="/Course/Create" class="bg-green-600 hover:bg-green-700 text-white text-sm font-bold py-2 px-4 rounded shadow">
                    <i class="fa-solid fa-plus"></i> Yeni Ekle
                </a>
            }
            else
            {
                <span class="text-gray-500 text-sm">@Model.Count kurs listeleniyor</span>
            }
        </div>

        @if (Model.Count == 0)
        {
            <div class="bg-yellow-50 text-yellow-800 p-4 rounded border border-yellow-200">
                Bu kategoride henüz kurs bulunmuyor.
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6">
                @foreach (var item in Model)
                {
                    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col h-full">
                        <img src="@item.ImageUrl" alt="@item.Title" class="w-full h-48 object-cover">
                        <div class="p-5 flex flex-col flex-grow">
                            <div>
                                <a href="/Course/Index?categoryId=@item.CategoryId" class="inline-block bg-indigo-100 hover:bg-indigo-200 text-indigo-800 text-xs px-2 py-1 rounded-full uppercase font-semibold tracking-wide transition">
                                    @item.Category.Name
                                </a>
                            </div>

                            <h3 class="mt-2 text-xl font-bold text-gray-900 leading-tight">@item.Title</h3>

                            <p class="mt-2 text-gray-600 text-sm flex-grow">
                                @if (item.Description.Length > 80)
                                {
                                    @item.Description.Substring(0, 80) <span class="text-gray-400">...</span>
                                }
                                else
                                {
                                    @item.Description
                                }
                            </p>

                            <div class="mt-4 flex justify-between items-center border-t pt-4">
                                <span class="text-2xl font-bold text-gray-900">@item.Price.ToString("N0") ₺</span>

                                <div class="flex items-center gap-3">
                                    @if (Context.Session.GetString("Role") == "Admin")
                                    {
                                        <a href="/Course/Edit/@item.Id" class="text-yellow-500 hover:text-yellow-600 text-lg" title="Düzenle">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a href="/Course/Delete/@item.Id" onclick="return confirm('Bu kursu silmek istediğine emin misin?');" class="text-red-500 hover:text-red-600 text-lg" title="Sil">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    }

                                    <a href="/Course/Details/@item.Id" class="bg-indigo-50 text-indigo-600 px-3 py-1 rounded hover:bg-indigo-100 font-semibold text-sm">İncele &rarr;</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>