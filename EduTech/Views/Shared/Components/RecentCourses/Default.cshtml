@model List<EduTech.Models.Course>

<div class="bg-white p-4 rounded-lg shadow-md border border-gray-100 mt-6">
    <h3 class="font-bold text-gray-800 text-lg mb-4 border-b pb-2">
        <i class="fa-solid fa-clock-rotate-left text-indigo-600"></i> Son Eklenenler
    </h3>

    <div class="space-y-4">
        @foreach (var item in Model)
        {
            <a href="/Course/Details/@item.Id" class="flex gap-3 group">
                <img src="@item.ImageUrl" class="w-16 h-16 object-cover rounded-md group-hover:opacity-80 transition" />

                <div>
                    <h4 class="text-sm font-semibold text-gray-700 group-hover:text-indigo-600 transition">
                        @item.Title
                    </h4>
                    <span class="text-xs text-gray-500 font-bold">@item.Price.ToString("N0") ₺</span>
                </div>
            </a>
        }
    </div>
</div>