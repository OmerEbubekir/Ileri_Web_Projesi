@model EduTech.Models.Category

<div class="flex justify-center mt-10">
    <div class="w-full max-w-lg bg-white p-8 rounded-lg shadow-lg border border-gray-100">

        <div class="flex items-center gap-3 border-b pb-4 mb-6">
            <div class="bg-yellow-100 p-3 rounded-full text-yellow-600">
                <i class="fa-solid fa-pen"></i>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Kategori Düzenle</h2>
        </div>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2">Kategori Adı</label>
                <input asp-for="Name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 transition" />
                <span asp-validation-for="Name" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="flex items-center gap-4">
                <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-3 px-6 rounded-lg shadow transition duration-200">
                    Güncelle
                </button>
                <a href="/Category/Index" class="text-gray-600 hover:text-gray-900 font-medium">İptal</a>
            </div>
        </form>
    </div>
</div>