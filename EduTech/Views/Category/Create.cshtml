@model EduTech.Models.Category

<div class="flex justify-center mt-10">
    <div class="w-full max-w-lg bg-white p-8 rounded-lg shadow-lg border border-gray-100">

        <div class="flex items-center gap-3 border-b pb-4 mb-6">
            <div class="bg-indigo-100 p-3 rounded-full text-indigo-600">
                <i class="fa-solid fa-list"></i>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Yeni Kategori Ekle</h2>
        </div>

        <form asp-action="Create" method="post">

            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2">Kategori Adı</label>
                <input asp-for="Name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" placeholder="Örn: Mobil Programlama" required />
                <span asp-validation-for="Name" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="flex items-center gap-4">
                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-lg shadow transition duration-200">
                    <i class="fa-solid fa-check"></i> Kaydet
                </button>

                <a href="/Category/Index" class="text-gray-600 hover:text-gray-900 font-medium">İptal</a>
            </div>
        </form>
    </div>
</div>