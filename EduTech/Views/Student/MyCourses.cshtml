@model List<EduTech.Models.Sale>

<div class="max-w-4xl mx-auto mt-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-2">Kurslarım</h2>

    @if (Model.Count == 0)
    {
        <div class="text-center py-10 bg-white rounded-lg shadow">
            <p class="text-gray-500 mb-4">Henüz satın aldığınız bir kurs yok.</p>
            <a href="/Course/Index" class="text-indigo-600 font-bold hover:underline">Kursları Keşfet</a>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            @foreach (var item in Model)
            {
                <div class="flex bg-white rounded-lg shadow overflow-hidden h-32">
                    <img src="@item.Course.ImageUrl" class="w-32 h-full object-cover">
                    <div class="p-4 flex flex-col justify-between w-full">
                        <div>
                            <h3 class="font-bold text-gray-800">@item.Course.Title</h3>
                            <span class="text-xs text-gray-500">Satın Alma: @item.Date.ToShortDateString()</span>
                        </div>
                        <div class="text-right">
                            <a href="#" class="bg-green-600 text-white text-xs px-3 py-1 rounded hover:bg-green-700">
                                <i class="fa-solid fa-play"></i> Alındı
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>